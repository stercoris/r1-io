{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./src/types"],
    "paths": {
      "@Unpacker/*": ["unpacker/*"],
      "@Middleware/*": ["middleware/*"],
      "@Factory/*": ["factory/*"],
      "@BuildVkKeyboard/*": ["buildVkKeyboard/*"],
      "@Router/*": ["router/*"],
      "@ActionBuffer/*": ["actionBuffer/*"],
      "@Action/*": ["action/*"],
      "@Types/*": ["types/*"],
      "@Root": ["index"]
    }
  },
  "include": ["src/*", "src/types/*"]
}
