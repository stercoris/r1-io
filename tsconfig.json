{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types/"],
    "paths": {
      "*": ["node_modules/*"],
      "@Unpacker/*": ["src/unpacker/*"],
      "@Middleware/*": ["src/middleware/*"],
      "@Factory/*": ["src/factory/*"],
      "@BuildVkKeyboard/*": ["src/buildVkKeyboard/*"],
      "@Builder/*": ["src/builder/*"],
      "@ActionBuffer/*": ["src/actionBuffer/*"],
      "@Action/*": ["src/action/*"],
      "@Types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}
